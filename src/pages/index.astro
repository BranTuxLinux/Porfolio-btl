---
import Layout from "../layouts/Layout.astro";
import Briefcase from '../components/icons/Briefcase.astro'
import Experience from '../components/Experience.astro'
import SectionContainer from "../components/SectionContainer.astro";
import TitleSection from '../components/TitleSection.astro'
import Hero from "../components/Hero.astro"
---

<Layout
  title="Porfolio de midudev - Desarrollador y Programador Web con 15 años de experiencia"
  description="Contrata a midudev para crear tu aplicación web o móvil. Desarrollador Web y Creador de Contenido. Especializado en crear aplicaciones únicas."
>
  <main class="flex justify-center flex-col">
    <div class="space-y-24">
      <SectionContainer class="py-16 md:py-36">
        <Hero>
        </slot>
      </Hero>
      </SectionContainer>
      <SectionContainer id="experiencia">
        <TitleSection>
          <Briefcase class="size-8" />
          Experiencia laboral
        </TitleSection>
        <Experience />
      </SectionContainer>
    </div>
      
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1{
    font-family: 'Pixelify Sans Variable';
  }
  .line-1{
    position: relative;
    border-right: 2px solid rgba(255,255,255,.75);
    text-align: center;
    overflow: hidden;
    transform: translateY(-50%);    
}

/* Animation */
.anim-typewriter{
  animation: typewriter 4s steps(44) 2s 1 normal both,
             blinkTextCursor 2s steps(44) infinite normal;
}
@keyframes typewriter{
  from{width: 0;}
  to{width: 24em;}
}
@keyframes blinkTextCursor{
  from{border-right-color: rgba(255,255,255,.75);}
  to{border-right-color: transparent;}
}
  
</style>
