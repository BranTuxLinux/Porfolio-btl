---

import { undefined } from "astro:schema";
import { useTranslate } from "../i18n/useTranslate";
import LinkIcon from "./icons/LinkIcon.astro";
import SocialPill from "./SocialPill.astro";
const {t} =useTranslate(Astro.url)
interface projectTypes {
  title: string;
  subTitle: string;
  company: string;
  img: string;
  description: string;
  link?: string | any;
  tecnologies: string[];
}
const ProjectsInfo: projectTypes[] = t('Projects')
---

<section id="Projects" class="w-[100%]">
  {
    Array.isArray(ProjectsInfo) && ProjectsInfo.map(
      ({ description, img, link, title, tecnologies, company }) => (
        <div class="flex flex-col gap-5 mb-20 md:flex-row space-x-6 ">
          <img
            src={img}
            alt={title}
            class="rounded-lg object-top object-cover self-center hover:scale-105 transition duration-200 ease-out md:max-w-[40%] md:scale-100"
          />
          <articule class="lg:w-[80%] md:w-full ">
            <h1 class="text-3xl text-balance font-pixel gap-5 my-4">{title}</h1>
            <h3 class="font-pixel text-green-300"> {company}</h3>
            <p class="text-balance opacity-80 w-full">{description}</p>
            <label for="" class="opacity-50 font-pixel text-green-300">
              Made width:
              {Array.isArray(tecnologies) && tecnologies.map((tec) => (
                <span>{tec}, </span>
              ))}
            </label>

            <p>
              {link && (
                <SocialPill href={link}>
                  <LinkIcon />
                  Preview
                </SocialPill>
              )}
            </p>
          </articule>
        </div>
      )
    )
  }
</section>
