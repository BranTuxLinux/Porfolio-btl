---
import LinkIcon from "./icons/LinkIcon.astro";
import SocialPill from "./SocialPill.astro";

interface projectTypes {
  title: string;
  img: string;
  description: string;
  link?: string;
  tecnologies: string[]
}
const ProjectsInfo: projectTypes[] = [
  {
    title: "'Mesadoko' App mobile de Aprendizaje",
    img: "/public/mesadoko.png",
    description: "Desarrollé el backend con Node.js para el proyecto internacional Mesadoko de Mesa Davis Enterprises LLC, contribuyendo a su implementación mientras estudiaba. Siendo mi primer proyecto a gran escala",
    tecnologies:['NodeJS', 'Express', 'MySQL','Prisma ORM'],
    link: "https://play.google.com/store/apps/details?id=com.mesadavisenterprises.mesadokoapp&hl=en_US",
  },
  {
    title: "'Mesadoko' App mobile de Aprendizaje",
    img: "/public/Invetory.png",
    description: "Desarrollé el backend con Node.js para el proyecto internacional Mesadoko de Mesa Davis Enterprises LLC, contribuyendo a su implementación mientras estudiaba. Siendo mi primer proyecto a gran escala",
    tecnologies:['NodeJS', 'Express', 'MySQL','Prisma ORM'],
  }
];
---

<section id="Projects" class="w-[100%] ">
  {
    ProjectsInfo.map(({ description, img, link, title ,tecnologies }) => (
      <div class="flex flex-col gap-5 mb-20 md:flex-row space-x-6 ">
        <img src={img} alt={title} class="rounded-lg object-top object-cover self-center hover:scale-110 transition duration-200 ease-out md:max-w-[40%]" />
        <articule class="lg:w-[80%] md:w-full ">
          <h1 class="text-3xl text-balance font-pixel gap-5 my-4" >{title}</h1>
          <p class="text-balance opacity-80 w-full">{description}</p>
          <label for="" class="opacity-50">Made width:
            {tecnologies.map((tec) => (
                <span>{tec}, </span>
            ))}
          </label>
          
          
          {link && (
            <SocialPill href={link}>
              <LinkIcon />
              Preview
            </SocialPill>
          )}
        </articule>
      </div>
    ))
  }
</section>
