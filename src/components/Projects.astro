---
import LinkIcon from "./icons/LinkIcon.astro";
import SocialPill from "./SocialPill.astro";

interface projectTypes {
  title: string;
  subTitle: string;
  company: string;
  img: string;
  description: string;
  link?: string;
  tecnologies: string[];
}
const ProjectsInfo: projectTypes[] = [
  {
    title: "'Mesadoko' ",
    subTitle: "App mobile de Aprendizaje",
    img: "/public/mesadoko.png",
    company: "Disruptive IT",
    description:
      "Desarrollé el backend con Node.js para el proyecto internacional Mesadoko de Mesa Davis Enterprises LLC, contribuyendo a su implementación mientras estudiaba. Siendo mi primer proyecto a gran escala",
    tecnologies: ["NodeJS", "Express", "MySQL", "Prisma ORM"],
    link: "https://play.google.com/store/apps/details?id=com.mesadavisenterprises.mesadokoapp&hl=en_US",
  },
  {
    title: "SAS SIP Inventory, ",
    subTitle: "Un Servicio de Inventario para Supermercados",
    company: "Disruptive IT",
    img: "/public/Invetory.png",
    description:
      'Lideré el proyecto web SAS SIP Inventory como desarrollador full-stack, enfocado en soluciones escalables y eficientes con ReactJS.Transformé SAS SIP Inventory en una solución generalizada para supermercados, llamado "SuperMarket Inventory", liderando todos los aspectos del desarrollo.',
    tecnologies: [
      "ReactJS",
      "ZustanJS",
      "MySQL",
      "Prisma ORM",
      "NodeJS",
      "Express",
    ],
  },
  {
    title: "RC SERVICE",
    subTitle: "Projecto Formativo",
    company: "Arrendamientos del norte",
    img: "/public/Invetory.png",
    description:
      'Lideré el proyecto web SAS SIP Inventory como desarrollador full-stack, enfocado en soluciones escalables y eficientes con ReactJS.Transformé SAS SIP Inventory en una solución generalizada para supermercados, llamado "SuperMarket Inventory", liderando todos los aspectos del desarrollo.',
    tecnologies: [
      "ReactJS",
      "ZustanJS",
      "MySQL",
      "Prisma ORM",
      "NodeJS",
      "Express",
    ],
  },
];
---

<section id="Projects" class="w-[100%]">
  {
    ProjectsInfo.map(
      ({ description, img, link, title, tecnologies, company }) => (
        <div class="flex flex-col gap-5 mb-20 md:flex-row space-x-6 ">
          <img
            src={img}
            alt={title}
            class="rounded-lg object-top object-cover self-center hover:scale-110 transition duration-200 ease-out md:max-w-[40%]"
          />
          <articule class="lg:w-[80%] md:w-full ">
            <h1 class="text-3xl text-balance font-pixel gap-5 my-4">{title}</h1>
            <h3 class="font-pixel text-green-300"> {company}</h3>
            <p class="text-balance opacity-80 w-full">{description}</p>
            <label for="" class="opacity-50 font-pixel text-green-300">
              Made width:
              {tecnologies.map((tec) => (
                <span>{tec}, </span>
              ))}
            </label>

            <p>
              {link && (
                <SocialPill href={link}>
                  <LinkIcon />
                  Preview
                </SocialPill>
              )}
            </p>
          </articule>
        </div>
      )
    )
  }
</section>
