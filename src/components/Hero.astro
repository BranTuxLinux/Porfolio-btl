---
const personalImageAlt = "Brandon-photo";
import { useTranslate } from "../i18n/useTranslate.ts";
import Badge from "./Badge.astro";
import LinkedInIcon from "./icons/LinkedIn.astro";
import MailIcon from "./icons/Mail.astro";
import PDFIcon from "./icons/PDFIcon.astro";
import SocialPill from "./SocialPill.astro";
const { t } = useTranslate(Astro.url);
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/profile-photo.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/brantuxlinux"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{t("badges.work")}</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold font-pixel tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    {t("index.name")}
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-green-400 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <p set:html={t("index.description")} class="changeTheme"/>
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:brandonquinterogit@gmail.com">
      <MailIcon class="size-4" />
      {t("badges.contactMe")}
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/brantux">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="/CV-ES.pdf" target="_blank">
      <PDFIcon class="size-4" />
      CV
    </SocialPill>
  </nav>
</div>
